#!/bin/sh
# set shell aliases and functions
## designed for the interactive console

# Aliases
alias e="${EDITOR:-'nvim'}"
alias open="${OPENER:-'xdg-open'}"
alias g="git"
alias z="zathura"
alias iv="nsxiv"
if [ -x "$(command -v trash)" ]; then
  alias rm="trash"
  alias rmf="$(which rm)"
fi
#alias rmf="/usr/bin/rm"
alias lsd="/usr/bin/lsd -lF -1 --blocks='permission,user,group,size,date,name' --color='always' \
            --date='+%d %b %y %H:%I' --sort='size' --group-dirs='first' --header -v"
alias tree="lsd --tree -I'.git'"
alias reso="source $HOME/.bashrc"
alias brave="brave-browser-nightly"

viminfo() {
    nvim -R -M -c "Info $1 $2" +only
}
alias info=viminfo

