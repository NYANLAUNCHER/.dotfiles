#!/bin/sh
# Link to a directory in $PATH
df_dir="${DF_GIT_DIR:-$HOME/.dotfiles}"
df_origin="${DF_ORIGIN:-git@github.com:NYANLAUNCHER/.dotfiles}"
df_wt="${DF_WORK_TREE:-$HOME}"

dot() {
  git --git-dir="$df_dir" --work-tree="$df_wt" "$@"
}

if [ "$1" = "init" ]; then
  if [ ! -d "$df_dir" ]; then
    dot init
    dot remote add origin "$df_origin"
  fi
else
  if [ -n "$1" ]; then
    dot "$@"
  else
    echo "No git command provided."
  fi
fi
