
# Cycle the keyboard layout
#super + alt + k
#  ./cyclekbdlayout.sh 1

#super + alt + shift + k
#  ./cyclekbdlayout.sh -1

#super + ctrl + k
#  ./cyclekbdlayout.sh -1


# Take screenshots
##copy screenshot to clipboard from current screen
Print
  flameshot screen -c

##save and copy screenshot from current screen
ctrl + Print
  flameshot screen -c -p $XDG_PICTURES_DIR/screen/

##copy rectangle select to clipboard
shift + Print
  flameshot gui -c

##save and copy rectangle select from current screen
ctrl + shift + Print
  flameshot gui -c -p $XDG_PICTURES_DIR/screen/
